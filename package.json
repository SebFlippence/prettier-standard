{
  "name": "prettier-standard",
  "version": "2.0.2",
  "description": "Prettier and standard brought together!",
  "main": "lib/no-main.js",
  "bin": {
    "prettier-standard": "lib/index.js"
  },
  "keywords": [
    "prettier",
    "eslint",
    "standard"
  ],
  "author": "Adam Stankiewicz <sheerun@sher.pl>",
  "license": "MIT",
  "repository": "sheerun/prettier-standard",
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "chalk": "^1.1.3",
    "find-up": "^2.1.0",
    "get-stdin": "^5.0.1",
    "glob": "^7.1.1",
    "ignore": "^3.2.4",
    "indent-string": "^3.1.0",
    "lodash.memoize": "^4.1.2",
    "loglevel-colored-level-prefix": "^1.0.0",
    "meow": "3.7.0",
    "messageformat": "^1.0.2",
    "prettier-eslint": "^4.3.2",
    "eslint": "*",
    "rxjs": "^5.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-jest": "^19.0.0",
    "babel-preset-node-module": "^1.2.1",
    "babel-register": "^6.23.0",
    "cross-run": "^1.0.1",
    "husky": "^0.13.2",
    "jest": "^19.0.2",
    "lint-staged": "^3.3.1",
    "prettier": "^0.22.0",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "cli": "babel-node src/cli.js",
    "build": "run NODE_ENV=production babel src --out-dir lib",
    "test": "run NODE_ENV=test jest",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build",
    "postpublish": "rimraf lib",
    "format": "babel-node ./src/index.js 'src/**/*.js'"
  },
  "files": [
    "lib",
    "src"
  ],
  "lint-staged": {
    "*.js": [
      "babel-node ./src/index.js",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
